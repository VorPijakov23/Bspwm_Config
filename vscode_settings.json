{
    "workbench.colorTheme": "Default Dark+",
    "files.autoSave": "afterDelay",
    "workbench.startupEditor": "none",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.productIconTheme": "fluent-icons",
    "symbols.hidesExplorerArrows": false,
    "workbench.iconTheme": "symbols",
    "workbench.activityBar.location": "top",
    "editor.suggest.showStatusBar": true,
    "vscode-pets.position": "explorer",
    "vscode-pets.petColor": "black",
    "terminal.integrated.fontSize": 12,
    "cSpell.userWords": [
        "aiohttp",
        "Arifmometr",
        "qrcode"
    ],
    "terminal.external.linuxExec": "alacritty",
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.cursorBlinking": true,
    "editor.fontLigatures": true,
    "editor.cursorStyle": "line-thin",
    "editor.glyphMargin": false, // Отступы
    "editor.scrollbar.horizontal": "hidden", // Горизонтальный скролл бар
    "editor.scrollbar.vertical": "auto", // Вертикальный скролл бар
    "window.density.editorTabHeight": "compact",
    "editor.minimap.enabled": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "explorer.confirmDelete": false, // Компактные открытые файлы
    "cSpell.language": "en,ru",
    "editor.hover.enabled": false,
    "editor.hover.above": false,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "window.menuBarVisibility": "toggle",
    "window.commandCenter": false,
    "workbench.layoutControl.enabled": false,
    "terminal.integrated.fontFamily": "Jetbrains mono",
    "editor.codeLensFontFamily": "Jetbrains mono",
    "editor.fontFamily": "Jetbrains mono",
    "editor.fontSize": 14,
    "window.zoomLevel": -1,
}